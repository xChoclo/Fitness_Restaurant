<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Fitness Restaurant | Taste And Train</title>
        
        <!-- Fuente nunito -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito:ital@0;1&display=swap" rel="stylesheet">
        <!-- API para iconos -->
        <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,100..700,0..1,0..200" rel="stylesheet">
        <!-- libreria para los sliders -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"/>
        <!-- Conexiones a css's -->
        <link rel="stylesheet" href="/public/CSS/base.css">
        
        
    </head>
    <body>
        <header>
            <div class="menu">
            <a href="{% url 'index' %}"><img src="{% static 'img/logo Blanco.png' %}" class="logo-1" alt="logo"></a>
            <input type="checkbox" id="menu"/>
            <label for="menu">
                <span class="material-symbols-outlined" class="menu-icono">
                    menu
                </span>
            </label>
            
            <nav class="navbar">
                <div class="menu-1">
                    <ul>
                        <li><a href="{% url 'index' %}">Inicio</a></li>
                        <li><a href="{% url 'menu' %}">Menú</a></li>
                        <li>
                            <div class="modo-oscuro">
                                <span class="material-symbols-outlined active">
                                    dark_mode
                                </span>
                                <span class="material-symbols-outlined">
                                    light_mode
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
                <img src="{% static 'img/logo Blanco.png' %}"  class="logo-2 invertir-en-oscuro">
                <div class="menu-2">
                        <li>
                            <a id="premium-icon" class="btn-premium">
                                <span class="material-symbols-outlined">
                                    workspace_premium
                                </span>
                            </a>
                        </li>
                        <div class="separator"></div>
                        {% if sesion_iniciada and rol_usuario == "cliente" %}
                        <li>
                            <a href="{% url 'perfil_cliente' %}">
                                <span class="material-symbols-outlined">person</span>
                            </a>
                        </li>
                        
                        {% else %}
                        <li>
                            <a href="{% url 'login' %}?rol=cliente">
                                <span class="material-symbols-outlined">login</span>
                            </a>
                        </li>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>
    <div id="notificaciones">
        {% if messages %}
            {% for message in messages %}
                <div class="alert alert-{% if message.tags and message.tags != 'error' %}{{ message.tags }}{% else %}danger{% endif %} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endif %}
    </div>

    <main>
    <%- body %>
    </main>

    <div class="contenedor-ia">
        <!-- Floating Chat Icon -->
        <div id="chatbot-icon"><img src="{% static 'img/robot blanco.png' %}" alt=""></div>
        <!-- Chatbot Container -->
        <div id="chatbot-container" class="hidden">
            <div id="chatbot-header">
                <span>Nixana</span>
                <button id="close-btn">&times;</button>
            </div>
            <div id="chatbot-body">
                <div id="chatbot-messages"></div>
            </div>
            <div id="chatbot-input-container">
                <input type="text" id="chatbot-input" placeholder="Hablemos un rato..." />
                <button id="send-btn">Send</button>
            </div>
        </div>  
    </div>





    <footer class="footer container">
        <!-- Logo y redes sociales -->
        <div class="footer-section logo-social invertir-en-oscuro">
            <img src="{% static 'img/logo Blanco.png' %}" class="footer-logo">
            <div class="social-icons ">
                <a href="#"><img src="{% static 'img/Facebook.png' %}"></a>
                <a href="#"><img src="{% static 'img/Instagram.png' %}"></a>
                <a href="#"><img src="{% static 'img/pinterest.png' %}"></a>
            </div>
        </div>

        <!-- Enlaces -->
        <div class="footer-section links">
            <ul>
                <li><a href="{% url 'terminos' %}">Términos y Condiciones</a></li>
                <li><a href="{% url 'sobre_nosotros' %}">Sobre nosotros</a></li>
                <li><a href="{% url 'sistema_envios' %}">Sistema de envíos</a></li>
                <li><a href="{% url 'login' %}?rol=admin">Panel Administrador</a></li>
            </ul>
        </div>

        <!--  colaboracion -->
        <div class="footer-section collaboration">
            <img src="{% static 'img/logo Blanco.png' %}"class="logo-collaboration invertir-en-oscuro">
            <span class="material-symbols-outlined collaboration-x">
                close
            </span>
            <img src="{% static 'img/rappi.png' %}" alt="Rappi-Logo" class="rappi-logo invertir-en-oscuro">
        </div>

    </footer>

    
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="{% static 'JS/index.js' %}" ></script>
    <script src="{% static 'JS/chat-bot.js' %}"></script>
</body>